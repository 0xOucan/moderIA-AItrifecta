# Copy this file to .env and fill in your own credentials.

# OpenAI API Key for LLM
OPENAI_API_KEY="your_OPENAI_API_KEY_here"

# Wallet Private Key (DO NOT SHARE!)
WALLET_PRIVATE_KEY="your_private_key_here"  # Will be used for all networks

# Telegram Bot Integration
TELEGRAM_BOT_TOKEN="your_bot_token_here"

# SecretVault Organization Credentials
SV_ORG_DID="your_organization_DID_here"
SV_PRIVATE_KEY="your_secret_vault_private_key_here"
SV_PUBLIC_KEY="your_secret_vault_public_key_here"

# SecretVault Node Configuration
# Node 1 Configuration
SV_NODE1_URL="your_node1_url_here"  # e.g., https://nildb-zy8u.nillion.network
SV_NODE1_DID="your_node1_did_here"  # e.g., did:nil:testnet:nillion1fnhettvcrsfu8zkd5zms4d820l0ct226c3zy8u

# Node 2 Configuration
SV_NODE2_URL="your_node2_url_here"  # e.g., https://nildb-rl5g.nillion.network
SV_NODE2_DID="your_node2_did_here"  # e.g., did:nil:testnet:nillion14x47xx85de0rg9dqunsdxg8jh82nvkax3jrl5g

# Node 3 Configuration
SV_NODE3_URL="your_node3_url_here"  # e.g., https://nildb-lpjp.nillion.network
SV_NODE3_DID="your_node3_did_here"  # e.g., did:nil:testnet:nillion167pglv9k7m4gj05rwj520a46tulkff332vlpjp

# Schema IDs for Collections - generate UUIDs for each collection
SCHEMA_ID_SERVICE="your_UUID_for_service_collection_here"
SCHEMA_ID_BOOKING="your_UUID_for_booking_collection_here" 
SCHEMA_ID_REVIEW="your_UUID_for_review_collection_here"

# Base Configuration
SV_PRIVATE_KEY=           # Your organization's private key (hex format)
SV_ORG_DID=              # Your organization's DID
SV_JWT_TOKEN=            # Your organization's JWT token
SV_BASE_URL=             # Base URL for the Secret Vault service

# Node 1 Configuration
SV_NODE1_URL=            # URL for the first node (e.g., https://nildb-zy8u.nillion.network)
SV_NODE1_DID=            # DID for the first node (e.g., did:nil:testnet:nillion1fnhettvcrsfu8zkd5zms4d820l0ct226c3zy8u)

# Node 2 Configuration
SV_NODE2_URL=            # URL for the second node (e.g., https://nildb-rl5g.nillion.network)
SV_NODE2_DID=            # DID for the second node (e.g., did:nil:testnet:nillion14x47xx85de0rg9dqunsdxg8jh82nvkax3jrl5g)

# Node 3 Configuration
SV_NODE3_URL=            # URL for the third node (e.g., https://nildb-lpjp.nillion.network)
SV_NODE3_DID=            # DID for the third node (e.g., did:nil:testnet:nillion167pglv9k7m4gj05rwj520a46tulkff332vlpjp)

# Schema IDs
SCHEMA_ID_MERCHANT=      # UUID for merchant schema
SCHEMA_ID_PRODUCT=       # UUID for product schema
SCHEMA_ID_SALES=         # UUID for sales schema

